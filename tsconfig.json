{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@generated/*": [
        "generated/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@wrappers/*": [
        "wrappers/*"
      ],
      "@public/*": [
        "..public/*"
      ],
      "@typings/*": [
        "typings/*"
      ],
      "@modules/*": [
        "modules/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "config/jest/jest-dom-extend-expect.js",
    "next.config.js",
    ".d.ts",
    "src/lib/google/gtag.js",
    "src/modules/core/i18n/i18n.config.ts",
    "src/modules/core/i18n/i18n.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.ts",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
